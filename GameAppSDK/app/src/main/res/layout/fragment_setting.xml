<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient"
    tools:context=".Frame_Layout.SettingFragment">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imageViewAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic2"
        android:layout_marginBottom="16dp"
        android:contentDescription="User Avatar"/>

    <!-- Switch Âm thanh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sound"/>

        <Switch
            android:id="@+id/switchSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Âm thanh"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <!-- Switch Chế độ tối -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_dark_mode"/>

        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chế độ tối"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <!-- Button Thay đổi ngôn ngữ -->
    <Button
        android:id="@+id/buttonChangeLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thay đổi ngôn ngữ"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/brown"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button Đổi mật khẩu -->
    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/brown"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button Cập nhật thông tin cá nhân -->
    <Button
        android:id="@+id/buttonUpdateProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật thông tin cá nhân"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/brown"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button Quản lý thông báo -->
    <Button
        android:id="@+id/buttonManageNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý thông báo"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/brown"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button Xem nhật ký hoạt động -->
    <Button
        android:id="@+id/buttonViewActivityLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem nhật ký hoạt động"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/brown"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

    <!-- Button Đăng xuất -->
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/brown"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
